<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/xian2"
        android:layout_width="340dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_news"
            android:layout_width="40dp"
            android:layout_height="wrap_content"></ImageView>
        <LinearLayout
            android:background="#979797"
            android:layout_width="1dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:layout_height="17dp">

        </LinearLayout>
        <com.superluo.textbannerlibrary.TextBannerView
            android:layout_marginLeft="8dp"
            android:id="@+id/affiche_text"
            android:layout_width="250dp"
            app:setGravity = "left"
            app:setDirection = "bottom_to_top"
            app:setTextSize = "12dp"
            app:setInterval = "800"
            app:setSingleLine = "true"
            app:setTextColor = "#717171"
            android:layout_height="30dp">

        </com.superluo.textbannerlibrary.TextBannerView>
    </LinearLayout>


</LinearLayout>